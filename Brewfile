# Development Tools Brewfile
# Install with: brew bundle

# Development
brew "git"
brew "git-crypt"
brew "uv"  # Fast Python package manager
brew "stylua"  # Lua formatter
brew "markdownlint-cli"

# Language Servers
brew "ansible-language-server"
brew "fish-lsp"
brew "lua-language-server"
brew "marksman"
brew "markdown-oxide"
brew "typos-lsp"
